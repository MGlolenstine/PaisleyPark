<Window x:Name="window" 
        x:Class="PaisleyPark.Views.HotkeyManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:p="clr-namespace:PaisleyPark.Common"
        p:DialogCloser.DialogResult="{Binding Path=DialogResult}"
        prism:ViewModelLocator.AutoWireViewModel="True"
        mc:Ignorable="d"
        Title="Hotkey Manager" 
        WindowStartupLocation="CenterOwner"
        Height="373" 
        Width="340" 
        ResizeMode="CanMinimize">

    <Grid>
        <ListBox Margin="10,10,84,35" ItemsSource="{Binding Path=Hotkeys}" SelectedItem="{Binding Path=SelectedItem}" BorderBrush="#FFCCCCCC" BorderThickness="1">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Path=Name, FallbackValue=???}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Content="OK" Margin="0,0,84,10"
                Command="{Binding OKCommand}" CommandParameter="{Binding ElementName=window, Mode=OneWay}" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" />
        <StackPanel Margin="0,10,8,35" HorizontalAlignment="Right" Width="69">
            <StackPanel.Resources>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Margin" Value="0,0,0,5" />
                    <Setter Property="Padding" Value="0,2" />
                </Style>
            </StackPanel.Resources>
            <Button Content="New" VerticalAlignment="Top" HorizontalAlignment="Stretch" ToolTip="Create a new hotkey."
                    Command="{Binding AddCommand}" />
            <Button Content="Delete" VerticalAlignment="Top" HorizontalAlignment="Stretch" ToolTip="Delete the selected hotkey."
                    Command="{Binding RemoveCommand}"/>
            <Button Content="Edit" VerticalAlignment="Top" HorizontalAlignment="Stretch" ToolTip="Edit a selected hotkey."
                    Command="{Binding EditCommand}" />
            <Button Content="Import" VerticalAlignment="Top" HorizontalAlignment="Stretch" ToolTip="Import a new hotkey."
                    Command="{Binding ImportCommand}" />
            <Button Content="Export" VerticalAlignment="Top" HorizontalAlignment="Stretch" ToolTip="Export a selected hotkey to clipboard."
                    Command="{Binding ExportCommand}" />
        </StackPanel>
    </Grid>
</Window>
